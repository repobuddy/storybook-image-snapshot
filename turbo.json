{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", "esm/**"]
		},
		"//#check": {},
		"clean": {
			"cache": false
		},
		"coverage": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"nuke": {
			"cache": false,
			"dependsOn": ["clean"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"w": {
			"dependsOn": ["^build"],
			"persistent": true
		}
	}
}
