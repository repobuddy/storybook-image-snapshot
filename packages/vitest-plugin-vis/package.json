{
	"name": "vitest-plugin-vis",
	"version": "0.0.0",
	"description": "Vitest visual testing plugin",
	"keywords": [
		"image-snapshot",
		"vitest",
		"visual-test"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/repobuddy/storybook-image-snapshot",
		"directory": "packages/vitest-image-snapshot"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./esm/index.js"
		},
		"./config": {
			"types": "./src/config.ts",
			"default": "./esm/config.js"
		},
		"./core": {
			"types": "./src/core.ts",
			"default": "./esm/core.js"
		},
		"./presets/auto": {
			"types": "./src/presets/auto.ts",
			"default": "./esm/presets/auto.js"
		},
		"./presets/manual": {
			"types": "./src/presets/manual.ts",
			"default": "./esm/presets/manual.js"
		},
		"./setup": {
			"types": "./src/setup.ts",
			"default": "./esm/setup.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"esm",
		"src"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"clean": "rimraf coverage esm *.tsbuildinfo vitest.*.timestamp*",
		"cov": "cross-env COVERAGE=true vitest run --coverage",
		"coverage": "cross-env COVERAGE=true vitest run --coverage",
		"dev": "run-p build:watch w",
		"nuke": "rimraf node_modules",
		"test": "vitest run",
		"v": "run-p build cov",
		"w": "vitest",
		"w:node": "vitest --project=vpv:node",
		"w:pw": "vitest --project=vpv:pw",
		"w:wd": "vitest --project=vpv:wd",
		"w:cov": "cross-env COVERAGE=true vitest --coverage"
	},
	"dependencies": {
		"@types/pixelmatch": "^5.2.6",
		"dedent": "^1.5.1",
		"is-ci": "^3.0.1",
		"mkdirp": "^3.0.1",
		"pathe": "^1.1.2",
		"pixelmatch": "^6.0.0",
		"pngjs": "^7.0.0",
		"rimraf": "^6.0.1",
		"type-plus": "^8.0.0-beta.6"
	},
	"devDependencies": {
		"@repobuddy/typescript": "^2.1.0",
		"@types/is-ci": "^3.0.4",
		"@types/pngjs": "^6.0.5",
		"@types/react": "^19.0.2",
		"@vitest/browser": "^2.1.8",
		"@vitest/coverage-istanbul": "^2.1.8",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/expect": "^2.1.8",
		"cross-env": "^7.0.3",
		"npm-run-all2": "^7.0.2",
		"playwright": "^1.49.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"typescript": "^5.7.2",
		"vite": "^5.3.5",
		"vitest": "^2.1.3",
		"vitest-browser-react": "^0.0.4",
		"webdriverio": "^9.4.1"
	},
	"peerDependencies": {
		"@vitest/browser": "^2.1.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
